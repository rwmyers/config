# === Beeping
setopt no_beep               # Turn off the bell

# === Navigation
setopt auto_cd               # If not a normal command and it's the name of a directory, try to cd

# === History
setopt share_history         # Share command history data
setopt append_history        # Allow multiple sessions to append to one command history
setopt hist_ignore_dups      # Ignore duplicate commands in history list
setopt inc_append_history    # Add commands to $HISTFILE in order of execution

