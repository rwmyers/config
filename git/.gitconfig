[user]
    name = Russell Myers
    email = mezner@russellmyers.com
[color]
    ui = true
[alias]
    s = status
    d = diff
    c = commit
    a = add
    l = log
    lo = log --oneline
    co = checkout
    cp = cherry-pick
    br = branch
    ci = commit
    st = status
    di = diff
    unstage = reset HEAD .
    undo = checkout -- .
    ff = find-file
    graph = log --graph --full-history --all --color --pretty=format:"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s"
    today = log --since=\"12am\"
[core]
    excludesfile = ~/.gitignore_global
    editor = 'nvim'
    pager = delta
[push]
    default = simple
[http]
    sslverify = false
[grep]
    linenumber = true
[status]
    short = true
    branch = true
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
    line-numbers = true

[include]
path = .gitconfig.local
[init]
	defaultBranch = main
