#!/usr/bin/env bash
task_id=$( exec $HOME/bin/todo-list | wofi -i --dmenu | sed 's/.* - \([0-9]\+\)$/\1/' )

if [[ -z $task_id ]]
then
    exit 1
fi

op=$( echo -e "Complete\nComment" | wofi -i --dmenu | awk '{print tolower($1)}' )

if [[ -z $op ]]
then
    exit 2
fi

case $op in
    complete)
        todoist tasks done $task_id
        ;;
    comment)
        ;;
esac
